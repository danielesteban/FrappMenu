<table class="table">
	{{#each this}}
		<thead>
			<tr>
				<th colspan="3">{{name}}</th>
			</tr>
		</thead>
		<tbody>
			{{#each frapps}}
				<tr>
					<td class="text-center">
						{{#if icon}}
							<img src="{{icon}}">
						{{else}}
							<span class="h3">{{i 'file'}}</span>
						{{/if}}
					</td>
					<td width="70%">
						<strong>{{name}}</strong><br>
						<small class="text-muted">{{description}}</small>
					</td>
					<td class="text-right text-muted">
						<span class="version">v{{version}}</span>
						<button class="btn btn-primary">{{i 'cloud-download'}}</button>
					</td>
				</tr>
			{{/each}}
		</tbody>
	{{/each}}
</table>
{{#empty this}}
	<h2 class="text-muted text-center">{{L 'allFrappsInstalled'}}</h2>
{{/empty}}
