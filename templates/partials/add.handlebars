<div class="modal fade" id="add" tabindex="-1" role="dialog" aria-labelledby="addLabel" aria-hidden="true">
	<div class="modal-dialog">
		<div class="modal-content">
			<div class="modal-header">
				<button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
				<h4 class="modal-title" id="addLabel">{{L 'addMore'}}</h4>
			</div>
			<div class="modal-body frapps">
				<div class="well well-sm">
					<table></table>
				</div>
				<p class="help-block text-center">
					<a onclick="$('#add .frapps').hide();$('#add .repo').show();$('#add .repo input').first().focus()">{{L 'addFromRepo'}}</a> &nbsp;|&nbsp; <a onclick="$('#add .frapps').hide();$('#add .sources').show();$('#add .sources input').first().focus()">{{L 'editSources'}}</a>
				</p>
			</div>
			<div class="modal-body sources" style="display:none">
				<div class="well well-sm">
					<table></table>
				</div>	
				<form>
					<div class="form-group">
						<label for="addSourceURL">{{L 'sourceURL'}}:</label>
						<input id="addSourceURL" class="form-control" name="url">
					</div>
					<div class="form-group text-right">
						<button class="btn btn-primary">{{L 'add'}}</button>
					</div>
				</form>
			</div>
			<div class="repo" style="display:none">
				<form>
					<div class="modal-body">
						<div class="form-group">
							<label for="addRepoURL">{{L 'repoURL'}}:</label>
							<input id="addRepoURL" class="form-control" name="url" placeholder="https://github.com/{author}/{frapp}.git">
						</div>
					</div>
					<div class="modal-footer">
						<button class="btn btn-primary">{{L 'add'}}</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
